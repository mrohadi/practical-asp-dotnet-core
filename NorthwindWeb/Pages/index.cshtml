@page
@functions
{
    public string DayName { get; set; }

    public void OnGet()
    {
        ViewData["Title"] = "Northwind Websire";
        Model.DayName = DateTime.Now.ToString("dddd");
    }
}

<div class="jumbotron">
    <h1 class="dipslay-3">Welcome To Northwind!</h1>
    <p class="lead">We supply products to our cutomers.</p>
    <hr>
    <p>It's @Model.DayName! Our customers include restaurants, hotels, and cruise lines.</p>
    <p>
        <a href="suppliers" class="btn btn-primary">Learn about our suppliers</a>
    </p>
</div>
